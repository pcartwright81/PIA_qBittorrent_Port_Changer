<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:tb="http://www.hardcodet.net/taskbar"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:local="clr-namespace:PIA_qBittorrent_Port_Changer">
    <ContextMenu
        d:DataContext="{d:DesignInstance local:TrayIconViewModel}"
        x:Shared="false"
        x:Key="SysTrayMenu">
        <MenuItem Header="{Binding PiaPortDisplay}"/>
        <MenuItem Header="{Binding QbitPortDisplay}"/>
        <MenuItem Header="Check Now" Command="{Binding CheckNowCommand}"/>
        <MenuItem Header="{Binding PauseText}" Command="{Binding PauseCommand}"/>
        <Separator />
        <MenuItem Header="Exit" Command="{Binding ExitCommand}"/>
    </ContextMenu>


    <!--  the application's NotifyIcon - started from App.xaml.cs. Declares its own view model.  -->
    <tb:TaskbarIcon
        d:DataContext="{d:DesignInstance local:TrayIconViewModel}"
        x:Key="NotifyIcon"
        IconSource="Resources/Icon.Ico"
        ContextMenu="{StaticResource SysTrayMenu}"
        ToolTipText="{Binding ToolTipText}">
    </tb:TaskbarIcon>

</ResourceDictionary>